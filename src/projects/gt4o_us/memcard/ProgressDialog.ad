module MemcardProject::ProgressDialog
{
	static opened = false;

	function open(context, message)
	{
		dialog::bar.final_width = dialog::bar_bg.w
		ProgressDialog::dialog::message.text = message;
		if (!opened)
		{
			context.pushPage(ProgressDialog);
		}
		opened = true;
	}

	function close(context)
	{
		opened = false;
		context.closePage(ProgressDialog)
	}

	function setProgress(progress)
	{
		dialog::bar.progress = progress;
	}

	function setTarget(t)
	{
	}
}