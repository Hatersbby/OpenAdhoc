module CursorRoot
{
    function setCursor(context, state)
    {
        if (state == "wait")
        {
            Cursor.FaceColorInterpolator.restart();
        }
        else if (state == "default")
        {
            Cursor.FaceColorInterpolator.reset();
        }
        else
        {
        }
    }
}