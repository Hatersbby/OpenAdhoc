function setBlinkActor(widget, period)
{
	if (period == nil)
	{
		period = 0.25;
	}

	var actor = main::menu::MFadeActor(widget, 1.0);
	widget.actor = actor;
	widget.actor.period = period;
	widget.actor.repeat = true;
}

function setDialogMoveActorH(widget)
{
	var actor = main::menu::MMoveActor(widget, 640.0 + widget.w, widget.y);
	widget.actor = actor;
	widget.actor.ratio = 0.2;
	widget.actor.out = true;
	widget.actor.warp();
}

function setDialogMoveActorV(widget)
{
	var actor = main::menu::MMoveActor(widget, widget.x, 480.0 + widget.h);
	widget.actor = actor;
	widget.actor.ratio = 0.2;
	widget.actor.out = true;
	widget.actor.warp();
}

function setFadeActor(widget, period)
{
	if (period == nil)
	{
		period = 0.25;
	}

	var actor = main::menu::MFadeActor(widget, 1.0);
	widget.actor = actor;
	widget.actor.period = period;
	widget.actor.out = true;
	widget.actor.warp();
}

function terminateRTIME()
{
	if(main::network.isRTIMEInitialized())
		main::network.terminateRTIME();
}

function downNetwork()
{
	terminateRTIME();
	main::network.terminateNetwork();
	main::network.network_enable = false;
}